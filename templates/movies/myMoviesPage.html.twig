{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/myMoviesPage.css') }}" type="text/css"/>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for movie in movies %}
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                    <div class="movie">
                        <img src="{{ movie.poster }}" alt="{{ movie.title }}">
                        <h1>{{ movie.title }}</h1>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}