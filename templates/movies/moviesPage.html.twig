{% extends 'base.html.twig' %}

{% block title %}
    Movies page
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('styles/moviesPage.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="p-movies">
        <div class="container">
            <div class="row">
                {% for movie in movies %}
                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                        <a class="gallery-link" href="{{ path('movieDetailPage', {id: movie.id}) }}">
                            <div class="gallery-item">
                                <img src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2{{ movie.poster_path }}"
                                     alt="{{ movie.title }}"/>
                                <h1>{{ movie.title }}</h1>

                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}